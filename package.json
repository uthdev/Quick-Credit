{
  "name": "quick-credit",
  "version": "1.0.0",
  "description": "Quick Credit is an online lending platform that provides short term soft loans to individuals",
  "main": "index.js",
  "scripts": {
    "prestart": "npm run clean",
    "start": "node build/index.js",
    "build": "./node_modules/.bin/babel ./server/src --out-dir build",
    "clean": "rm -rf build && npm run build",
    "dev": "nodemon --exec babel-node ./server/src/index.js",
    "lint": "eslint --fix ./server/src/**/*.js",
    "test": "nyc --reporter=lcov --reporter=text-lcov mocha --exit --require @babel/register --require babel-polyfill ./server/src/test/**/*.js || true | ./node_modules/coveralls/bin/coveralls.js && rm -rf coverage && rm -rf .nyc_output",
    "spec": "nyc mocha --timeout 10000 --exit --require @babel/register --require babel-polyfill ./server/src/test/**/*.js || true ",
    "migrations": "babel-node server/src/database/dropTables && babel-node server/src/database/createTables",
    "seed": "babel-node server/src/database/seed",
    "dbtest": "npm run migrations && npm run seed"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uthdev/Quick-Credit.git"
  },
  "author": "Adeleke Gbolahan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/uthdev/Quick-Credit/issues"
  },
  "homepage": "https://github.com/uthdev/Quick-Credit#readme",
  "dependencies": {
    "@babel/runtime": "^7.4.4",
    "@sendgrid/mail": "^6.4.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^8.0.0",
    "express": "^4.16.4",
    "jsonwebtoken": "^8.5.1",
    "pg": "^7.11.0",
    "validatorjs": "^3.15.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/node": "^7.2.2",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/register": "^7.4.4",
    "babel-polyfill": "^6.26.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "coveralls": "^3.0.3",
    "eslint": "^5.3.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "mocha": "^6.1.4",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.19.0",
    "nyc": "^14.1.0"
  }
}
